<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppThemeImc" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryImc</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkImc</item>
        <item name="colorAccent">@color/colorAccentImc</item>
    </style>

    <style name="AppThemeChurrasco" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryChurrasco</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkChurrasco</item>
       <!-- <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppThemeCombustivel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCombustivel</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCombustivel</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>


    <style name="AppThemeConsumo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryConsumo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkConsumo</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTxJurosTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryTxJuros</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTxJuros</item>
        <item name="colorAccent">@color/colorAccentTxJuros</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="ImcEditTextTheme">
        <item name="colorControlNormal">@color/imc300</item>
        <item name="colorControlActivated">@color/imc400</item>
        <item name="colorControlHighlight">@color/imc400</item>
    </style>

    <style name="ChurrascoEditTextTheme">
        <item name="colorControlNormal">@color/churrasco300</item>
        <item name="colorControlActivated">@color/churrasco400</item>
        <item name="colorControlHighlight">@color/churrasco400</item>
    </style>

    <style name="CombustivelEditTextTheme">
        <item name="colorControlNormal">@color/combustivel300</item>
        <item name="colorControlActivated">@color/combustivel400</item>
        <item name="colorControlHighlight">@color/combustivel400</item>
    </style>

    <style name="ConsumoEditTextTheme">
        <item name="colorControlNormal">@color/consumo300</item>
        <item name="colorControlActivated">@color/consumo300</item>
        <item name="colorControlHighlight">@color/consumo400</item>
    </style>

    <style name="TxJurosEditTextTheme">
        <item name="colorControlNormal">@color/txJuros200</item>
        <item name="colorControlActivated">@color/txJuros300</item>
        <item name="colorControlHighlight">@color/txJuros400</item>
    </style>

    <style name="CinzaThme">
        <item name="colorControlNormal">#CFCFCF</item>
        <item name="colorControlActivated">#4F4F4F</item>
        <item name="colorControlHighlight">#4F4F4F</item>
    </style>

    <style name="TabTxJuros" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/branco</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/colorPrimaryTxJuros</item>
        <item name="tabTextAppearance">@style/TabTxJurosTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTxJurosTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/txJuros200</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
