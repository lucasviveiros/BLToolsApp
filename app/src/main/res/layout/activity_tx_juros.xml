<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.calculadora.TxJurosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/TabTxJuros"
                    ads:tabMode="scrollable">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vlr Prestação">
                    </android.support.design.widget.TabItem>

                    <android.support.design.widget.TabItem
                        android:text="Vlr Financiamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.design.widget.TabItem>

                    <android.support.design.widget.TabItem
                        android:text="Taxa Juros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TabItem
                        android:text="Qntdade Meses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TabLayout>

                <Button
                    android:id="@+id/txJurosCalcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_rounded_corner_tx_juros"
                    android:onClick="calcular"
                    android:text="calcular"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@android:color/white" />


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/txJurosAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">

    </com.google.android.gms.ads.AdView>

</RelativeLayout>
